<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/_170mdp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_no_connection"
        android:layout_width="@dimen/_270mdp"
        android:layout_height="@dimen/_170mdp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/_8mdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/close"
                android:layout_width="@dimen/_30mdp"
                android:layout_height="@dimen/_30mdp"
                android:padding="@dimen/_8mdp"
                android:scaleType="fitXY"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/icon_close" />

            <TextView
                android:id="@+id/check_ip_text"
                style="@style/roboto_regular_14"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20mdp"
                android:layout_marginTop="@dimen/_20mdp"
                android:text="@string/enter_ip"
                android:textColor="@color/text_dark"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/input_ip1"
                android:layout_width="@dimen/_40mdp"
                android:layout_height="@dimen/_31mdp"
                android:layout_marginStart="@dimen/_14mdp"
                android:layout_marginTop="@dimen/_10mdp"
                android:background="@drawable/ic_vvod_ip"
                android:ems="3"
                android:hint="@string/_127"
                android:inputType="number"
                android:maxLength="3"
                android:textAlignment="center"
                android:textColorHint="@color/user_item_text"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/check_ip_text"
                tools:ignore="Autofill" />

            <TextView
                android:id="@+id/dot1"
                style="@style/roboto_regular_25"
                android:layout_width="@dimen/_8mdp"
                android:layout_height="@dimen/_30mdp"
                android:text="@string/dot"
                android:textAlignment="center"
                app:layout_constraintStart_toEndOf="@+id/input_ip1"
                app:layout_constraintTop_toTopOf="@id/input_ip1" />

            <EditText
                android:id="@+id/input_ip2"
                android:layout_width="@dimen/_40mdp"
                android:layout_height="@dimen/_31mdp"
                android:background="@drawable/ic_vvod_ip"
                android:ems="3"
                android:hint="@string/zero"
                android:inputType="number"
                android:maxLength="3"
                android:textAlignment="center"
                android:textColorHint="@color/user_item_text"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/dot1"
                app:layout_constraintTop_toTopOf="@id/input_ip1"
                tools:ignore="Autofill" />

            <TextView
                android:id="@+id/dot2"
                style="@style/roboto_regular_25"
                android:layout_width="@dimen/_8mdp"
                android:layout_height="@dimen/_30mdp"
                android:text="@string/dot"
                android:textAlignment="center"
                app:layout_constraintStart_toEndOf="@+id/input_ip2"
                app:layout_constraintTop_toTopOf="@id/input_ip1" />

            <EditText
                android:id="@+id/input_ip3"
                android:layout_width="@dimen/_40mdp"
                android:layout_height="@dimen/_30mdp"
                android:background="@drawable/ic_vvod_ip"
                android:ems="3"
                android:hint="@string/zero"
                android:inputType="number"
                android:maxLength="3"
                android:textAlignment="center"
                android:textColorHint="@color/user_item_text"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/dot2"
                app:layout_constraintTop_toTopOf="@id/input_ip2"
                tools:ignore="Autofill" />

            <TextView
                android:id="@+id/dot3"
                style="@style/roboto_regular_25"
                android:layout_width="@dimen/_8mdp"
                android:layout_height="@dimen/_30mdp"
                android:text="@string/dot"
                android:textAlignment="center"
                app:layout_constraintStart_toEndOf="@id/input_ip3"
                app:layout_constraintTop_toTopOf="@id/input_ip1" />

            <EditText
                android:id="@+id/input_ip4"
                android:layout_width="@dimen/_40mdp"
                android:layout_height="@dimen/_31mdp"
                android:background="@drawable/ic_vvod_ip"
                android:ems="3"
                android:hint="@string/_1"
                android:inputType="number"
                android:maxLength="3"
                android:textAlignment="center"
                android:textColorHint="@color/user_item_text"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/dot3"
                app:layout_constraintTop_toTopOf="@id/input_ip3"
                tools:ignore="Autofill" />

            <TextView
                android:id="@+id/colon"
                style="@style/roboto_regular_25"
                android:layout_width="@dimen/_8mdp"
                android:layout_height="wrap_content"
                android:text="@string/colon"
                android:layout_marginTop="@dimen/_6mdp"
                android:textAlignment="center"
                app:layout_constraintStart_toEndOf="@id/input_ip4"
                app:layout_constraintTop_toBottomOf="@id/check_ip_text" />

            <EditText
                android:id="@+id/input_ip5"
                android:layout_width="@dimen/_50mdp"
                android:layout_height="@dimen/_31mdp"
                android:layout_marginEnd="@dimen/_14mdp"
                android:background="@drawable/ic_vvod_ip"
                android:ems="4"
                android:hint="@string/_8080"
                android:inputType="number"
                android:maxLength="4"
                android:textAlignment="center"
                android:textColorHint="@color/user_item_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_weight="1"
                app:layout_constraintStart_toEndOf="@id/colon"
                app:layout_constraintTop_toTopOf="@id/input_ip4"
                tools:ignore="Autofill" />

            <TextView
                android:id="@+id/error_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/please_enter_all"
                android:textColor="#C0577A"
                style="@style/roboto_regular_14"
                android:layout_marginTop="@dimen/_10mdp"
                app:layout_constraintEnd_toEndOf="parent"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/input_ip3"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/save_ip_button"
                style="@style/roboto_regular_12_green_buttons"
                android:layout_width="@dimen/_200mdp"
                android:layout_height="@dimen/_30mdp"
                android:background="@drawable/green_button"
                android:text="@string/save"
                android:textAllCaps="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/error_text" />


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>