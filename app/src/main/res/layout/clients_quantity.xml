<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/amount_of_clients_text1"
        style="@style/roboto_regular_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/amount_of_clients"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/amount_of_clients"
        style="@style/roboto_bold_14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_8font_mdp"
        app:layout_constraintStart_toEndOf="@+id/amount_of_clients_text1"
        app:layout_constraintTop_toTopOf="@+id/amount_of_clients_text1" />

</androidx.constraintlayout.widget.ConstraintLayout>