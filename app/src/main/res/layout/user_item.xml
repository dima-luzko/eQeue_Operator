<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_margin="@dimen/_2mdp"
    android:layout_gravity="center"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/user_name"
        android:layout_width="@dimen/_240mdp"
        android:layout_height="@dimen/_35mdp"
        android:background="@drawable/choose_user_item"
        android:gravity="center"
        android:ellipsize="end"
        android:lines="1"
        android:paddingEnd="@dimen/_20mdp"
        android:paddingStart="@dimen/_20mdp"
        android:paddingBottom="@dimen/_4mdp"
        android:textAlignment="center"
        android:textColor="@color/user_item_text"
        android:textSize="@dimen/_12font_mdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>