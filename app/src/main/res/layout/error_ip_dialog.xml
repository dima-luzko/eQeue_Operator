<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/_130mdp">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_no_connection"
        app:cardBackgroundColor="@color/white"
        android:layout_width="@dimen/_280mdp"
        android:layout_height="@dimen/_130mdp"
        app:cardCornerRadius="@dimen/_8mdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/check_ip_text"
                style="@style/roboto_regular_12_dark"

                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20mdp"
                android:layout_marginTop="@dimen/_30mdp"
                android:text="@string/error_ip"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatButton

                android:id="@+id/try_again"
                style="@style/roboto_regular_10_green_buttons"
                android:layout_width="@dimen/_120mdp"
                android:layout_height="@dimen/_30mdp"

                android:background="@drawable/pink_button"
                android:text="@string/try_again"
                android:textAllCaps="false"
                android:layout_marginStart="@dimen/_14mdp"
                android:layout_marginTop="@dimen/_20mdp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/check_ip_text" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/enter_new_ip"
                style="@style/roboto_regular_10_green_buttons"
                android:layout_width="@dimen/_120mdp"
                android:layout_height="@dimen/_30mdp"
                android:layout_marginEnd="@dimen/_14mdp"
                android:background="@drawable/pink_button"
                android:text="@string/enter_new_ip"
                android:textAllCaps="false"
                android:layout_marginTop="@dimen/_20mdp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/check_ip_text" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>