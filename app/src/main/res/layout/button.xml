<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_call_next_client"
        android:layout_width="@dimen/_240mdp"
        android:layout_height="@dimen/_28mdp"
        android:background="@drawable/green_button"

        android:text="@string/to_call_next_client"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_list_postponed_clients"
        android:layout_width="@dimen/_240mdp"
        android:layout_height="@dimen/_28mdp"
        android:layout_marginTop="@dimen/_10mdp"
        android:background="@drawable/green_button"

        android:text="@string/to_list_postponed_client"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_call_next_client" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_no_client"
        android:layout_width="@dimen/_240mdp"
        android:layout_height="@dimen/_28mdp"
        android:layout_marginTop="@dimen/_10mdp"
        android:background="@drawable/disable_button"
        android:text="@string/to_no_client"
        android:textAllCaps="false"
        android:textColor="@color/gray_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_list_postponed_clients" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_start_work"
        android:layout_width="@dimen/_240mdp"
        android:layout_height="@dimen/_28mdp"
        android:layout_marginTop="@dimen/_10mdp"
        android:background="@drawable/disable_button"
        android:text="@string/to_start_work"
        android:textAllCaps="false"
        android:textColor="@color/gray_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_no_client" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_redirect"
        android:layout_width="@dimen/_240mdp"
        android:layout_height="@dimen/_28mdp"
        android:layout_marginTop="@dimen/_10mdp"
        android:background="@drawable/disable_button"
        android:text="@string/to_redirect_client"
        android:textAllCaps="false"
        android:textColor="@color/gray_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_start_work" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_postpone"
        android:layout_width="@dimen/_240mdp"
        android:layout_height="@dimen/_28mdp"
        android:layout_marginTop="@dimen/_10mdp"
        android:background="@drawable/disable_button"
        android:text="@string/to_postpone_client"
        android:textAllCaps="false"
        android:textColor="@color/gray_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_redirect" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_finish_work"
        android:layout_width="@dimen/_240mdp"
        android:layout_height="@dimen/_28mdp"
        android:layout_marginTop="@dimen/_10mdp"
        android:background="@drawable/disable_button"
        android:text="@string/to_finish_work"
        android:textAllCaps="false"
        android:textColor="@color/gray_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_postpone" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_call_next_client_one_mode"
        android:layout_width="@dimen/_240mdp"
        android:layout_height="@dimen/_56mdp"
        android:layout_marginTop="@dimen/_36mdp"
        android:background="@drawable/green_button"
        android:text="@string/to_call_next_client"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/status_of_client" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_call_next_client_again_one_mode"
        android:layout_width="@dimen/_240mdp"
        android:layout_height="@dimen/_56mdp"
        android:layout_marginTop="@dimen/_20mdp"
        android:background="@drawable/green_button"
        android:text="@string/to_call_next_client_again"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_call_next_client_one_mode" />

</androidx.constraintlayout.widget.ConstraintLayout>